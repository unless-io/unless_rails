<div class="three-cards-container">
  <h2 class="header-gray">
    Partners
  </h2>
  <!-- TODO CHANGE ITERATOR FROM ALWAYS 10 TO LISTEN TO 'LIMIT' VARIABLE -->
  <% (0..3).to_a.each_slice(3) do |slice| %>
  <div class="row">
    <% slice.each do |item| %>
    <div class="col-xs-4">
      <%= render partial: 'shared/cards/simple_image_card', locals: {
        title: 'Le Wagon',
        image: 'partners/lewagon.png',
        image_style: 'contain',
        border: false,
        text_align: 'center'
      } %>
    </div>
    <% end %>
  </div>
  <% end %>
    <% feature_on = true %>
    <% unless request.original_url == portfolio_partnerships_url || feature_on %>
      <div class="button-right">
        <%= link_to 'See more partners', portfolio_partnerships_path, class: 'button-red'  %>
      </div>
  <% end %>
</div>